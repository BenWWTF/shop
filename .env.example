# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medusa_shop
DB_USER=medusa_user
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgres://medusa_user:your_secure_password_here@localhost:5432/medusa_shop

# ============================================
# MEDUSA BACKEND
# ============================================
MEDUSA_BACKEND_URL=http://localhost:9000
MEDUSA_ADMIN_ONBOARDING_TYPE=skip

# JWT & Security
JWT_SECRET=your_jwt_secret_here_min_32_chars
COOKIE_SECRET=your_cookie_secret_here_min_32_chars

# ============================================
# STRIPE PAYMENT
# ============================================
# Get these from https://dashboard.stripe.com
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# NEXT.JS FRONTEND
# ============================================
NEXT_PUBLIC_MEDUSA_URL=http://localhost:9000
NEXT_PUBLIC_STRIPE_KEY=pk_test_your_stripe_publishable_key

# ============================================
# EMAIL (Optional - SendGrid)
# ============================================
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM=noreply@shop.zurlegende.hinterbuchinger.com

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=development

